<h1 class="perfil-title">{{name}}</h1>
<h2>{{giro}}</h2>
<h3>Consumo promedio: {{averagePrice}}</h3>
<br />
<h4>Bebidas en tu restaurante:</h4>
<div id="drinkCard">
  {{#each drinks as |drink|}}

  <div class='card' id="cardSingle" style="width: 16rem;">
    <img class="card-img-top" id="imagenCard" src="{{this.imgPath}}" alt="{{this.imgName}}" width="100px;">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">{{this.description}}</p>
    </div>
  </div>
  {{/each}}
</div>